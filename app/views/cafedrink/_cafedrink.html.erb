<div class="box1">
  <img class="post_image" src="<%= cafedrink.image %>">
    <% if user_signed_in? && current_user.id == cafedrink.user_id %>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', "/cafedrink/#{cafedrink.id}",method: :get %>
          </li>
          <li>
            <%= link_to '編集', "/cafedrink/#{cafedrink.id}/edit",method: :get %>
          </li>
            <li>
              <%= link_to '削除', "/cafedrink/#{cafedrink.id}",method: :delete %>
            </li>
          </ul>
    <% else %>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', "/cafedrink/#{cafedrink.id}",method: :get %>
          </li>
        </ul>
    <% end %>
      <ul class="content">
        <li class="memo">
          <%= cafedrink.memo %>
        </li>
        <li class="name">
          <%= cafedrink.name %>
        </li>
        <li class="place">
          <%= cafedrink.place %>
        </li>
        <li class="nickname">
          投稿者<%= cafedrink.user.nickname %>
        </li>
      </ul>
</div>

